#!/usr/bin/env ruby
#
# This file was generated by RubyGems. (and then I took it)
#
# The application 'rails' is installed as part of a gem, and
# this file is here to facilitate running it.
#

require 'rubygems'

version = ">= 0"

if ARGV.first =~ /^_(.*)_$/ and Gem::Version.correct? $1 then
  version = $1
  ARGV.shift
end

#	There NEEDS to be a lib/grape_juice.rb to do this and that is not accurate!
#	Any gem could have that.
#	How to find the location of a specific gem?
template_dir = Gem.searcher.find('grape_juice').full_gem_path + '/templates'
ARGV.push("--template=#{template_dir}/grape.rb")

gem 'rails', version
load Gem.bin_path('rails', 'rails', version)
